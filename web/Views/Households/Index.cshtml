@model IEnumerable<web.Models.Household>

@{
    ViewData["Title"] = "Index";
}

<h1>Welcome home!</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.householdID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.householdID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.householdID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
